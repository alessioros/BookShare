<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:tag="general_settings"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/set_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/settings_padding"
        android:paddingBottom="@dimen/settings_padding">

        <TextView
            android:id="@+id/loc_set_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/settings_txt_marginleft"
            android:layout_marginLeft="@dimen/settings_txt_marginleft"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/pref_header_general"
            android:textColor="@color/textPrimaryLight"
            android:textSize="@dimen/settings_txtsize" />

    </RelativeLayout>

    <View
        android:id="@+id/name_ruler"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/set_ruler_color"
        android:layout_below="@id/settings_general" />

    <RelativeLayout
        android:id="@+id/set_usersurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/settings_padding"
        android:paddingBottom="@dimen/settings_padding"
        android:layout_below="@+id/set_username">

        <TextView
            android:id="@+id/gen_set_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/settings_txt_marginleft"
            android:layout_marginLeft="@dimen/settings_txt_marginleft"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/pref_header_location"
            android:textColor="@color/textPrimaryLight"
            android:textSize="@dimen/settings_txtsize" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/set_ruler_color"
        android:layout_below="@id/set_usersurname" />

</RelativeLayout>