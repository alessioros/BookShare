<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.polimi.dima.bookshare.activities.LocationActivity">

    <TextView
        android:id="@+id/ask_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/ask_loc_txtsize" />

    <fragment
        android:id="@+id/map"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="@dimen/map_width"
        android:layout_height="@dimen/map_height"
        android:layout_below="@id/ask_location"
        tools:context="it.polimi.dima.bookshare.activities.MapsActivity" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="@dimen/login_input"
        android:layout_height="@dimen/input_height"
        android:text="@string/yes"
        android:background="@color/colorPrimaryLight"
        android:textColor="@color/white"
        android:layout_below="@id/map"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/find_location_button"
        android:layout_width="@dimen/login_input"
        android:layout_height="@dimen/input_height"
        android:text="@string/change_loc"
        android:background="@color/colorPrimaryLight"
        android:textColor="@color/white"
        android:layout_below="@id/map"
        android:layout_toEndOf="@id/confirm_button"
        android:layout_toRightOf="@id/confirm_button"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
